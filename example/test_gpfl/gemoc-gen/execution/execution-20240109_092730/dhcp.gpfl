PROLOGUE
	AUTOMATA "DHCP incoming controller"
		init = "0"
		"0" -"Disc" -> "1" 
		"1" -"Req" -> "2" 
		"1" -"Rej" -> "2" 
		"2" -"Ack" -> "0" 
		"0" -"Rel" -> "3"
		"3" -"Ack" -> "0" 
	INIT  
		newAutomaton("DHCP incoming controller", #A)
		set(ignoredPktThreshold, 0)
		set(ignoredPktCnt, 5)
		newInterrupt(60, true, 
			set(ignoredPktThreshold, 0)
		) 

